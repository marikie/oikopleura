Apr. 26, 2022
fasterq-dump ERR4570986

Apr. 28, 2022
fastq_quality_filter -q  30 -p 70 -i ERR4570986_1.fastq -o ERR4570986_1_filtered.fastq
fastq_quality_filter -q  30 -p 70 -i ERR4570986_2.fastq -o ERR4570986_2_filtered.fastq

fastx_trimmer -i ERR4570986_1_filtered.fastq -o ERR4570986_1_filtered_trimmed.fastq
fastx_trimmer -i ERR4570986_2_filtered.fastq -o ERR4570986_2_filtered_trimmed.fastq

May 2, 2022
perl ../removeUnpairedReads.pl ERR4570986_1_filtered_trimmed.fastq ERR4570986_2_filtered_trimmed.fastq

July 19, 2022
fastq-interleave ERR4570986_1_filtered_trimmed_sorted.fastq ERR4570986_2_filtered_trimmed_sorted.fastq > ERR4570986_filtered_trimmed_sorted_interleaved.fastq

# July 12, 2023
python addQueryNumAtTheEndOfID.py immatureAdults/ERR4570986_1_filtered_trimmed_sorted.fastq 1 > immatureAdults/ERR4570987_1_filtered_trimmed_sorted_numbered.fastq
python addQueryNumAtTheEndOfID.py immatureAdults/ERR4570986_2_filtered_trimmed_sorted.fastq 2 > immatureAdults/ERR4570986_2_filtered_trimmed_sorted_numbered.fastq

# July 18, 2023
python addQueryNumAtTheEndOfID.py immatureAdults/ERR4570986_1_filtered_trimmed_sorted.fastq 1 > immatureAdults/ERR4570986_1_filtered_trimmed_sorted_numbered.fastq

python ../addQueryNumAtTheEndOfID.py ERR4570986_2_filtered_trimmed_sorted.fastq 2 > ERR4570986_2_filtered_trimmed_sorted_numbered.fastq

# July 19, 2023
awk 'NR % 4 == 1 {$1 = $1 "/1"} 1' ERR4570986_1_filtered_trimmed_sorted.fastq > ERR4570986_1_filtered_trimmed_sorted_numbered.fastq
awk 'NR % 4 == 1 {$1 = $1 "/2"} 1' ERR4570986_2_filtered_trimmed_sorted.fastq > ERR4570986_2_filtered_trimmed_sorted_numbered.fastq
