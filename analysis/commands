maf-convert tab  eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.maf > eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.tab
# .tab -> query coord and geneID (chr start end geneID)

# November 6, 2023
# on my laptop
# Group aligned segments that are on the same gene's CDS
# .maf -> .psl psl: inbetween coord
maf-convert psl  eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.maf > eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.psl
# .psl -> .bed
awk -v OFS='\t' '{print $10, $12, $13, ".", ".", $9}' eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.psl > oik_lanc_many2one_alignedQuery_20231106.bed
# .gff CDS oik anno -> .bed
awk -v OFS='\t' '$3=="CDS"{print $0}' ../oikopleura/OKI2018_I69_1.0.gm.gff| awk -v OFS='\t' '{print $1, $4-1, $5, $9, ".", $7}' | awk 'BEGIN {OFS="\t"} {split($4, a, ";"); split(a[1], b, "="); split(b[2], c, "."); print $1, $2, $3, c[4]"."c[5], $5, $6}' > oik_anno_CDS_20231106.bed

# add "chr_" to $1
cat oik_lanc_many2one_alignedQuery_20231106.bed| awk 'BEGIN {OFS="\t"} {$1="chr_"$1; print}' > oik_lanc_many2one_alignedQuery_20231106_chr.bed
cat oik_anno_CDS_20231106.bed| awk 'BEGIN {OFS="\t"} {$1="chr_"$1; print}' > oik_anno_CDS_20231106_chr.bed
mv oik_lanc_many2one_alignedQuery_20231106_chr.bed oik_lanc_many2one_alignedQuery_20231106.bed
mv oik_anno_CDS_20231106_chr.bed oik_anno_CDS_20231106.bed

# bedtools 
bedtools intersect -wa -wb -a oik_lanc_many2one_alignedQuery_20231106.bed -b oik_anno_CDS_20231106.bed > oik_lanc_intersect_oik_anno_20231106.out

# November 8, 2023
# make separate files according to geneID
cat ../oik_lanc_intersect_oik_anno_20231106.out| awk '{file=$10".out"; print >> file; close(file)}'

# divide files by the number of lines 
bash ~/biohazard/oikopleura/analysis/singleLinesOrMultiLines.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/temp
# Separate files under a directory into two different directories
# single: files with only one line
# multiple: files with equal to or more than two lines
for file in $(ls $targetDir); do 
  # echo "$file"
  if [ -f "$file" ]; then
    lines=$(wc -l < "$file")
    # echo "$lines"
    if [ "$lines" -gt 1 ]; then
      echo "$file has $lines lines (more than 1 lines)"
      mv "$file" $targetDir"/multiple"
    else
      echo "$file has $lines lines (1 or fewer lines)"
      mv "$file" $targetDir"/single"
    fi
  # else
    # echo "else"
  fi
done

# November 10, 2023
# .psl -> query coord, strand, reference coord 
awk -v OFS="\t" '{print "chr_"$10, $12, $13, $9, "chr_"$14, $16, $17}' eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.psl > oik_lanc_many2one_alignedQuery_20231110.bed
# single or multiple
bash ~/biohazard/oikopleura/analysis/singleLinesOrMultiLines.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/

# rearrange to bring the ref coord at first
bash ~/biohazard/oikopleura/analysis/rearrange2refFirst.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/multiAlnSegOnTheSameQryGene
# rearrange to show the coord of ref at left
for file in $(ls $targetDir); do 
  if [ -f "$file" ]; then
    awk -v OFS="\t" '{print $5, $6, $7, $1, $2, $3, $4, $8, $9, $10, $11, $13}' $file > $targetDir"/ref.$file"
  fi
done

# November 20, 2023
# lancelet annotation: .gff -> .bed
cat ../lancelets/ncbi_dataset/data/GCF_000003815.2/genomic.gff | awk -v OFS="\t" '$3=="CDS"{print $0}' | awk -v FS="\t" -v OFS="\t" '{print "chr_"$1, $4, $5, $7, $9}' | awk -v FS="\t" -v OFS="\t" -F';|=|\t' '{for (i=1; i<NF; i+=2) {if ($i == "gene") print $1, $2, $3, $4, $(i+1)}}' > lanc_anno_CDS_20231120.bed

# (the versatile code by Liu-san)
cat /home/mrk/oikopleura/lancelets/ncbi_dataset/data/GCF_000003815.2/genomic.gff | awk -v OFS="\t" -F';|=|\t' '$3=="CDS"{for(i=9; i<NF; i+=2) {if ($i == "gene") print "chr_"$1, $4, $5, $7, $(i+1)}}' | less

# November 21, 2023
# lancelet annotation just reordered columns
cat lanc_anno_CDS_20231120.bed | awk -v OFS="\t" '{print $1, $2, $3, $5, $4}' > lanc_anno_CDS_20231121.bed

# bedtools intersect: ref coord in aligned segments intersect with ref annotation 
./overlappingRefAnnoToRefCoord.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/multiAlnSegOnTheSameQryGene
for file in $(ls ref*); do 
  if [ -f "$file" ]; then
    bedtools intersect -wa -wb -a $file -b ../../lanc_anno_CDS_20231121.bed > "ranno."$file
  fi
done

# categorize by ref annotations
# sameRefGene/ if aligned segments are on the same gene on ref
# diffRefGene/ if aligned segments are on different genes on ref
./sameOrDiffRefGene.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/multiAlnSegOnTheSameQryGene
for file in $(ls ranno*); do 
  # echo "$file"
  if [ -f "$file" ]; then
    numOfGenes=$(cat $file | awk '{print $16}' | uniq | wc -l)

    if [ "$numOfGenes" -gt 1 ]; then
      echo "$file has $numOfGenes different genes"
      mv "$file" $targetDir"/diffRefGene"
    else
      echo "$file has $numOfGenes gene"
      mv "$file" $targetDir"/sameRefGene"
    fi
  # else
    # echo "else"
  fi
done

# November 22, 2023
# .bed -> .psl
./fromBED2PSL.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/multiAlnSegOnTheSameQryGene/diffRefGene
for file in $(ls ranno*\.out); do 
  # echo "$file"
  if [ -f "$file" ]; then
    basename="$(basename "$file" ".out")"
    pslFile="$basename.psl"
    
    # echo "$pslFile"
    awk 'NR == FNR {a[$4, $5, $6, $1, $2, $3]; next} ("chr_"$10, $12, $13, "chr_"$14, $16, $17) in a' $file ../../../eachOikPart_OnePartInLanc_alignment_20230706_sortedByQuery.psl > $pslFile
  fi
done

# .psl -> .png
./fromPSL2Dotplot.sh ~/biohazard/data/lanc_oik_last/oik_lanc_intersect_oik_anno/multiAlnSegOnTheSameQryGene/diffRefGene
for file in $(ls ranno*\.psl); do 
  # echo "$file"
  if [ -f "$file" ]; then
    basename="$(basename "$file" ".psl")"
    pngFile="$basename.png"
    
    # echo "$pslFile"
    python ~/biohazard/oikopleura/last/last-dotplot_mariko_1513.py --sort1=3 --strands1=1 --border-color=silver --rot1=v --labels1=2 --labels2=2 --fontsize=10 -a $refAnnoFile -b $qryAnnoFile $file $pngFile
  fi
done

